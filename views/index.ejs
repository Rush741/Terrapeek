<%- include("./partials/header.ejs") %>

<!-- Search Form -->
<div class="max-w-2xl mx-auto mb-12">
    <form action="/country" method="post" class="bg-white/10 backdrop-blur-md rounded-2xl p-8 shadow-2xl border border-white/20">
        <div class="text-center mb-6">
            <label for="country" class="block text-xl font-semibold text-white mb-4">Search Any Country</label>
        </div>
        <div class="flex flex-col md:flex-row gap-4">
            <input 
                id="country-input" 
                name="country" 
                placeholder="Enter country name..." 
                class="flex-1 px-6 py-4 rounded-xl border border-gray-300 focus:border-cyan-400 focus:ring-2 focus:ring-cyan-400/20 bg-white/90 text-gray-800 placeholder-gray-500 text-lg transition-all duration-300"
            >
            <button 
                type="submit" 
                class="px-8 py-4 bg-gradient-to-r from-cyan-500 to-blue-600 hover:from-cyan-600 hover:to-blue-700 text-white font-semibold rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
            >
                Search
            </button>
        </div>
    </form>
</div>

<!-- Error Display -->
<% if(locals.error) { %>
<div class="max-w-2xl mx-auto mb-8">
    <div class="bg-red-500/20 backdrop-blur-md border border-red-400/30 rounded-xl p-6">
        <p class="text-red-200 text-center"><%=error%></p>
    </div>
</div>
<% } %>

<!-- Country Information Display -->
<% if(locals.flag) { %>
<div class="max-w-4xl mx-auto">
    <div class="bg-white/10 backdrop-blur-md rounded-2xl p-8 shadow-2xl border border-white/20">
        <!-- Flag -->
        <div class="text-center mb-8">
            <img src="<%=flag%>" alt="Country Flag" class="mx-auto rounded-lg shadow-lg border-4 border-white/20 w-32 h-20 object-cover">
        </div>
        
        <!-- Country Details Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% if(locals.capital) { %>
            <div class="bg-gradient-to-br from-blue-500/20 to-cyan-500/20 rounded-xl p-6 border border-blue-400/30">
                <h3 class="text-blue-300 font-semibold text-sm uppercase tracking-wider mb-2">Capital</h3>
                <p class="text-white text-xl font-bold"><%=capital%></p>
            </div>
            <% } %>
            
            <% if(locals.population) { %>
            <div class="bg-gradient-to-br from-purple-500/20 to-pink-500/20 rounded-xl p-6 border border-purple-400/30">
                <h3 class="text-purple-300 font-semibold text-sm uppercase tracking-wider mb-2">Population</h3>
                <p class="text-white text-xl font-bold"><%=populationFormatted%></p>
            </div>
            <% } %>
            
            <% if(locals.region) { %>
            <div class="bg-gradient-to-br from-green-500/20 to-emerald-500/20 rounded-xl p-6 border border-green-400/30">
                <h3 class="text-green-300 font-semibold text-sm uppercase tracking-wider mb-2">Region</h3>
                <p class="text-white text-xl font-bold"><%=region%></p>
            </div>
            <% } %>
            
            <% if(locals.continent) { %>
            <div class="bg-gradient-to-br from-orange-500/20 to-red-500/20 rounded-xl p-6 border border-orange-400/30">
                <h3 class="text-orange-300 font-semibold text-sm uppercase tracking-wider mb-2">Continent</h3>
                <p class="text-white text-xl font-bold"><%=continent%></p>
            </div>
            <% } %>
            
            <% if(locals.currency) { %>
            <div class="bg-gradient-to-br from-indigo-500/20 to-violet-500/20 rounded-xl p-6 border border-indigo-400/30">
                <h3 class="text-indigo-300 font-semibold text-sm uppercase tracking-wider mb-2">Currency</h3>
                <p class="text-white text-xl font-bold"><%=currency%></p>
            </div>
            <% } %>
        </div>
    </div>
</div>
<% } %>









</main>
<%- include("./partials/footer.ejs") %>